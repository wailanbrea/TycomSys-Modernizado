<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect to public directory
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# If mod_rewrite is not available, try to serve the file directly
<IfModule !mod_rewrite.c>
    DirectoryIndex public/index.php
</IfModule>
